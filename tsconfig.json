{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "amd",
        "alwaysStrict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "*.ts",
        "**/*.ts",
        "**/*.d.ts"
    ]
}